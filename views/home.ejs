<%- include("partials/header"); -%>
<div class="post-container">
  <% posts.forEach(function(post) { %>
    <div class="post">
      <% if (post.image) { %>
        <div class="post-image">
          <!--<img src="/uploads/< post.image %>" alt="Post Image" style="width: 100px; height: 100px;">-->
        </div>
      <% } %>
      <div class="post-content">
        <h2><%= post.title %></h2>
        <p><%= post.content.substring(0, 100) + " ..." %><a class="rmore" href="/posts/<%= post.title %>">Read More</a></p>
        <p>Date of Publication: <%= (new Date(post.date)).toLocaleDateString() %></p>
      </div>
    </div>
  <% }); %>
</div>
<%- include("partials/footer"); -%>
 
